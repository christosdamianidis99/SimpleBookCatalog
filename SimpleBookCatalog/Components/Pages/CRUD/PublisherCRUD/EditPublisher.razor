@page "/edit-publisher/{id:int}"
@using SimpleBookCatalog.Components.Pages.Forms.PublisherForms

@inject IPublisherRepository Repository
@inject NavigationManager Navigation

<PageTitle>
    Edit Publisher
</PageTitle>

<div class="row justify-content-center">
    <div class="col-6">
        <PublisherForm IsEditMode="true" PublisherId="@Id" OnValidAuthorSubmit="EditPublisherAsync"/>
    </div>
</div>
@code {
    [Parameter]
    public int Id{ get; set; }

    private async Task EditPublisherAsync(Publisher publisher)
    {
        await Repository.UpdateAsync(publisher);
        Navigation.NavigateTo("/show-publishers");
    }

}
