@page "/edit-book/{id:int}"
@using SimpleBookCatalog.Components.Pages.Forms.BookForms
@inject IBookRepository Repository
@inject NavigationManager Navigation


<PageTitle>
    Edit Book
</PageTitle>


    <div class="row justify-content-center">
        <div class="col-6">

        <BookForm IsEditMode="true" BookId="@Id" OnValidBookSubmit="EditBookAsync" />
</div>
    </div>


@code {
    [Parameter]
    public int Id{ get; set; }



    private async Task EditBookAsync(Book book)
    {
      
            await Repository.UpdateAsync(book);
            Navigation.NavigateTo("/show-books");
        
    }
}
